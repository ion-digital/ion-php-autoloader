{
    "name": "ion/autoloader",
    "type": "library",
    "description": "A small autoloading library, compatible with Composer, that allows you to customise your autoloading functionality.",
    "keywords": [
        "PHP",
        "boot strap",
        "bootstrap",
        "autoload",
        "autoload helper"
    ],
    "homepage": "https://github.com/ion-digital/ion-php-autoloader",
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Justus Meyer",
            "role": "developer",
            "homepage": "https://ion.digital"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ion/packaging": "dev-main"
    },
    "require-dev": {
        "ion/dev": "dev-main"
    },
    
    "minimum-stability": "dev", 
    "autoload": {
        "files": [
            "index.php"
        ]
    },    
    "autoload-dev": {
        "psr-4": {
            "ion\\": "tests/unit/ion/"
        }
    },
    "scripts": {
        "make": [

            "./vendor/bin/phing -f ./build.xml"
        ],
        "tests": [

            "./vendor/bin/phpunit ./tests/unit"
        ]
    },    
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/ion-digital/ion-php-dev.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/ion-digital/ion-php-packaging.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/ion-digital/ion-php-packaging-dev.git"
        }
    ],
    "config": {
        "allow-plugins": {
            "ion/dev": true
        }
    }    
}
