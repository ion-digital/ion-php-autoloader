{
    "name": "ion/autoloader",
    "type": "library",
    "description": "A small autoloading library, compatible with Composer, that allows you to customise your autoloading functionality.",
    "keywords": [
        "PHP",
        "boot strap",
        "bootstrap",
        "autoload",
        "autoload helper"
    ],
    "homepage": "https://github.com/ion-digital/ion-php-autoloader",
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Justus Meyer",
            "role": "developer",
            "homepage": "https://justusmeyer.com"
        }
    ],
    "require": {
        "php": ">=5.6"
    },
    "require-dev": {
        "php": "^8.2",
        "ion/dev": "dev-main"
    },
    
    "minimum-stability": "dev", 
    "autoload": {
        "files": [
            "autoload.php"
        ]
    },    
    "autoload-dev": {
        "psr-4": {
            "ion\\": "tests/unit/ion/"
        }
    },
    "config": {
        "allow-plugins": {
            "ion/dev": true
        }
    }
}
